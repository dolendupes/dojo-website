---
import Layout from './Layout.astro';

export interface Props {
  frontmatter: {
    title: string;
    date: string;
    author: string;
    category: string;
    excerpt: string;
    image?: string;
  };
}

const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={`${frontmatter.title} - DOJO Tampa Blog`} description={frontmatter.excerpt}>
  <article class="bg-white">
    <!-- Header -->
    <header class="bg-dojo-black text-white py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-4">
          <span class="inline-block px-4 py-2 text-sm font-semibold bg-dojo-red rounded-full">
            {frontmatter.category}
          </span>
        </div>
        <h1 class="font-inter font-bold text-4xl md:text-5xl mb-4">
          {frontmatter.title}
        </h1>
        <div class="flex items-center text-dojo-light">
          <span>{frontmatter.author}</span>
          <span class="mx-2">Â·</span>
          <time>{formattedDate}</time>
        </div>
      </div>
    </header>
    
    <!-- Content -->
    <div class="py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="prose prose-lg max-w-none prose-headings:font-inter prose-h2:text-3xl prose-h3:text-2xl prose-a:text-dojo-red prose-a:no-underline hover:prose-a:underline">
          <slot />
        </div>
      </div>
    </div>
    
    <!-- Author/CTA -->
    <section class="bg-dojo-light py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg p-8 shadow-md">
          <h3 class="font-inter font-bold text-xl mb-4">Join the DOJO Community</h3>
          <p class="text-dojo-gray mb-6">
            Be part of Tampa's most driven collective. Forge strength, build networks, and create opportunities with us.
          </p>
          <a href={`${import.meta.env.BASE_URL}join`} class="bg-dojo-red text-white px-6 py-3 rounded font-semibold hover:bg-red-700 transition-colors inline-block">
            Become a Founding Member
          </a>
        </div>
      </div>
    </section>
  </article>
</Layout>
