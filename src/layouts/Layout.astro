            )}
            {isLabsPage && (
              <>
                <a href={`${import.meta.env.BASE_URL}labs#residency-inquiry`} class="block w-full text-center px-4 py-2 text-sm font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 transition-colors uppercase tracking-wider">
                  Inquire About Residency
                </a>
                <a href={`${import.meta.env.BASE_URL}#inquiry`} class="block w-full text-center px-4 py-2 text-sm font-medium text-white bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors uppercase tracking-wider">
                  Start Your Journey
                </a>
              </>
            )}
            {!isEventsPage && !isLabsPage && (
              <a href={`${import.meta.env.BASE_URL}#inquiry`} class="block w-full text-center px-4 py-2 text-sm font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 transition-colors uppercase tracking-wider">
                Start Your Journey
              </a>
            )}
          </div>
        </div>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-dojo-black text-dojo-white mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
