                  </li>
                </ul>
              </div>
            </div>
            <span class="text-dojo-gray text-xs ml-4">|</span>
            {isEventsPage && (
              <>
                <a href={`${import.meta.env.BASE_URL}events#venue-rental`} class="inline-flex items-center px-4 py-2 text-xs font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors uppercase tracking-wider whitespace-nowrap">
                  Venue Rental
                </a>
                <a href={`${import.meta.env.BASE_URL}#inquiry`} class="inline-flex items-center px-4 py-2 text-xs font-medium text-white bg-gray-700 rounded-lg hover:bg-gray-600 focus:ring-4 focus:outline-none focus:ring-gray-500 transition-colors uppercase tracking-wider whitespace-nowrap">
                  Start Your Journey
                </a>
              </>
            )}
            {isLabsPage && (
              <>
                <a href={`${import.meta.env.BASE_URL}labs#residency-inquiry`} class="inline-flex items-center px-4 py-2 text-xs font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors uppercase tracking-wider whitespace-nowrap">
                  Inquire About Residency
                </a>
                <a href={`${import.meta.env.BASE_URL}#inquiry`} class="inline-flex items-center px-4 py-2 text-xs font-medium text-white bg-gray-700 rounded-lg hover:bg-gray-600 focus:ring-4 focus:outline-none focus:ring-gray-500 transition-colors uppercase tracking-wider whitespace-nowrap">
                  Start Your Journey
                </a>
              </>
            )}
            {!isEventsPage && !isLabsPage && (
              <a href={`${import.meta.env.BASE_URL}#inquiry`} class="inline-flex items-center px-4 py-2 text-xs font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors uppercase tracking-wider whitespace-nowrap">
                Start Your Journey
              </a>
            )}
          </div>
          
          <!-- Mobile menu button -->
          <div class="md:hidden flex items-center">
            <button type="button" id="mobile-menu-button" class="text-dojo-red hover:text-dojo-black">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden md:hidden bg-white">
        <div class="px-2 pt-2 pb-3 space-y-1">
          <a href={import.meta.env.BASE_URL} class={`block px-3 py-2 uppercase tracking-wider text-sm text-dojo-red hover:text-dojo-black ${isActive('') || isActive('/') ? 'border-l-4 border-dojo-red' : ''}`}>Home</a>
          <a href={`${import.meta.env.BASE_URL}mission`} class={`block px-3 py-2 uppercase tracking-wider text-sm text-dojo-red hover:text-dojo-black ${isActive('mission') || isActive('/mission') ? 'border-l-4 border-dojo-red' : ''}`}>Mission</a>
          <a href={`${import.meta.env.BASE_URL}events`} class={`block px-3 py-2 uppercase tracking-wider text-sm text-dojo-red hover:text-dojo-black ${isActive('events') || isActive('/events') ? 'border-l-4 border-dojo-red' : ''}`}>Events</a>
