---
export interface Props {
  title: string;
  date: string;
  time: string;
  description: string;
  type: string;
  image?: string;
}

const { title, date, time, description, type, image } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
  {image && (
    <div class="h-48 bg-dojo-gray">
      <!-- Image would go here -->
      <div class="h-full flex items-center justify-center text-white">
        <span class="text-sm">Event Image</span>
      </div>
    </div>
  )}
  
  <div class="p-6">
    <div class="flex items-center justify-between mb-3">
      <span class="inline-block px-3 py-1 text-sm font-semibold text-dojo-red bg-red-50 rounded-full">
        {type}
      </span>
    </div>
    
    <h3 class="font-inter font-bold text-xl mb-2">{title}</h3>
    
    <div class="text-sm text-dojo-gray mb-3 space-y-1">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
        </svg>
        {date}
      </div>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
        </svg>
        {time}
      </div>
    </div>
    
    <p class="text-dojo-gray mb-4">{description}</p>
    
    <button class="text-dojo-red font-semibold hover:text-red-700 transition-colors">
      Learn More â†’
    </button>
  </div>
</article>
