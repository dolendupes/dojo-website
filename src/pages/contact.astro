---
import Layout from '../layouts/Layout.astro';

const address = "3508 S Manhattan Ave, Tampa, FL 33629";
const googleMapsUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3527.1234567890!2d-82.5167!3d27.9506!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88c2c5c123456789%3A0x1234567890abcdef!2s3508%20S%20Manhattan%20Ave%2C%20Tampa%2C%20FL%2033629!5e0!3m2!1sen!2sus!4v1234567890123!5m2!1sen!2sus";
---

<Layout title="Contact - DOJO Tampa">
  <!-- Hero Section -->
  <section class="bg-dojo-black text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="font-inter font-bold text-4xl md:text-5xl mb-4 text-dojo-red">Location</h1>
        <p class="text-xl text-dojo-light max-w-3xl mx-auto">
          Find us in Tampa and connect with the DOJO community.
        </p>
      </div>
    </div>
  </section>

  <!-- Map and Contact Info -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
        <!-- Google Maps -->
        <div class="rounded-lg overflow-hidden shadow-lg">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3525.705086301565!2d-82.52016732742926!3d27.911022116484116!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88c2c32a914302f7%3A0x85f83f1d080df423!2s3508%20S%20Manhattan%20Ave%2C%20Tampa%2C%20FL%2033629!5e0!3m2!1sen!2sus!4v1763608435996!5m2!1sen!2sus"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="w-full h-[450px]"
          ></iframe>
        </div>

        <!-- Contact Information -->
        <div class="flex flex-col justify-center">
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="font-inter font-bold text-3xl mb-6 text-dojo-black">Get in Touch</h2>
            
            <!-- Address -->
            <div class="mb-8">
              <h3 class="font-inter font-semibold text-lg mb-3 text-dojo-red flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Location
              </h3>
              <p class="text-dojo-gray text-lg">
                {address}
              </p>
              <a
                href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(address)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center mt-3 text-dojo-red hover:text-red-700 transition-colors"
              >
                Get Directions
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>

            <!-- Social Media -->
            <div class="mb-8">
              <h3 class="font-inter font-semibold text-lg mb-4 text-dojo-red">Connect With Us</h3>
              <div class="flex items-center space-x-4">
                <a
                  href="https://www.facebook.com/share/1N1cZ9v8Lb/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-dojo-gray hover:text-dojo-red transition-colors"
                  aria-label="Facebook"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a
                  href="https://www.instagram.com/dojotampa"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-dojo-gray hover:text-dojo-red transition-colors"
                  aria-label="Instagram"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>

            <!-- Inquiry Form Link -->
            <div class="mb-6">
              <a
                href={`${import.meta.env.BASE_URL}#inquiry`}
                class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Submit an Inquiry
              </a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Info Section -->
  <section class="py-16 bg-dojo-light">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-inter font-bold text-3xl mb-4">Planning a Visit?</h2>
      <p class="text-xl text-dojo-gray mb-8">
        DOJO is a private collective. Visits are by appointment only. Please submit an inquiry or contact us through our social channels to schedule a visit.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`${import.meta.env.BASE_URL}#inquiry`}
          class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors"
        >
          Submit an Inquiry
        </a>
        <a
          href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(address)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 text-sm font-medium text-dojo-black bg-white border-2 border-dojo-gray rounded-lg hover:bg-dojo-light transition-colors"
        >
          Get Directions
        </a>
      </div>
    </div>
  </section>
</Layout>

