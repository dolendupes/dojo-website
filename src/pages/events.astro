---
import Layout from '../layouts/Layout.astro';
import VenueRentalForm from '../components/VenueRentalForm.astro';

// Sample events to showcase capabilities
const eventTypes = [
  {
    category: "Networking",
    title: "Member Mixers",
    description: "Curated networking events where meaningful connections replace small talk. Build relationships that matter.",
    frequency: "Monthly",
    image: `${import.meta.env.BASE_URL}images/events/networking.jpg`,
    visible: true
  },
  {
    category: "Workshops",
    title: "Executive Workshops",
    description: "Learn from successful entrepreneurs and industry leaders. Topics range from scaling businesses to optimizing performance.",
    frequency: "Periodic",
    image: `${import.meta.env.BASE_URL}images/events/workshop.jpg`,
    visible: true
  },
  {
    category: "Member Events",
    title: "Member-Hosted Gatherings",
    description: "Members can reserve our spaces for private events, from team offsites to product launches.",
    frequency: "On Request",
    image: `${import.meta.env.BASE_URL}images/events/private.jpg`,
    visible: false
  },
  {
    category: "Community",
    title: "Family Events",
    description: "Building a multi-generational community with events that bring families together.",
    frequency: "Seasonal",
    image: `${import.meta.env.BASE_URL}images/events/family.jpg`,
    visible: false
  },
  {
    category: "Training",
    title: "High-Performance Training Sessions",
    description: "Daily group training designed for peak performers. From strength and conditioning to martial arts and mobility work.",
    frequency: "Daily",
    image: `${import.meta.env.BASE_URL}images/events/training.jpg`,
    visible: true
  },
  {
    category: "Culinary",
    title: "Culinary Experiences",
    description: "Hands-on culinary experiences led by our chef in residence, often joined by talented colleagues from his network. From cooking lessons to tastings and workshops, explore diverse cuisines and enjoy the fruits of your labor with fellow members.",
    frequency: "Periodic",
    image: `${import.meta.env.BASE_URL}images/events/cooking.jpg`,
    visible: true
  }
];

// Filter to only show visible events
const visibleEvents = eventTypes.filter(event => event.visible);
---

<Layout title="Events - DOJO Tampa">
  <!-- Hero Section -->
  <section class="bg-dojo-black text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="font-inter font-bold text-4xl md:text-5xl mb-4 text-dojo-red">Experiences & Private Events</h1>
        <p class="text-xl text-dojo-light max-w-3xl mx-auto mb-8">
          DOJO hosts member events and experiences, and our venue is available for private bookings. Every gathering is designed with intention and executed with care.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href={`${import.meta.env.BASE_URL}events#venue-rental`} class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors">
            Book an Event
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Book an Event for Non-Members -->
  <section id="venue-rental-options" class="py-20 bg-dojo-light">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-inter font-bold text-4xl mb-4">Our Private Events Space</h2>
        <p class="text-xl text-dojo-gray max-w-3xl mx-auto mb-8">
          We create and deliver custom experiences that leave a lasting impression. Our distinctive venue features versatile indoor and outdoor spaces, and our team works with you to craft something truly memorable.
        </p>
      </div>
      
      <!-- The Event Team -->
      <div class="bg-white rounded-lg shadow-lg p-8 md:p-12 mb-8">
        <h3 class="font-inter font-bold text-2xl mb-6 text-center">The Event Team</h3>
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h4 class="font-inter font-semibold text-lg mb-3 text-dojo-red">Event Coordination</h4>
            <p class="text-dojo-gray mb-4">
              Our event team brings experience from premier local venues, coordinating details and logistics so you can focus on your guests.
            </p>
            <p class="text-dojo-gray">
              Our creative group brings fresh ideas and innovative approaches, allowing us to create unique experiences that exceed expectations.
            </p>
          </div>
          
          <div>
            <h4 class="font-inter font-semibold text-lg mb-3 text-dojo-red">Culinary</h4>
            <p class="text-dojo-gray mb-4">
              Our chef brings exceptional culinary talent to events, from intimate tastings to larger gatherings. He has led kitchens at established restaurants and brings that expertise to every experience.
            </p>
            <p class="text-dojo-gray">
              We work with talented colleagues from his network, ensuring we can deliver exactly what your event requires.
            </p>
          </div>
        </div>
      </div>
      
      <!-- Capabilities -->
      <div class="bg-white rounded-lg shadow-lg p-8 md:p-12">
        <h3 class="font-inter font-bold text-2xl mb-6 text-center">Our Capabilities</h3>
        <div class="space-y-4 text-dojo-gray">
          <p class="text-lg">
            Our amenities, combined with our connections to creatives, restaurants, caterers, and other partners, allow us to accommodate a wide range of event types and styles.
          </p>
          <p>
            Whether you're planning an intimate gathering, corporate event, celebration, or something entirely unique, we'd love to discuss how we can help make it happen.
          </p>
        </div>
      </div>
      
      <div class="text-center mt-12">
        <a href={`${import.meta.env.BASE_URL}events#venue-rental`} class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors">
          Book an Event
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Event Types -->
  <section id="member-events" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-inter font-bold text-4xl mb-4">Member Experiences</h2>
        <p class="text-xl text-dojo-gray max-w-3xl mx-auto">
          Unique community-building activities designed to forge deeper connections and create lasting relationships among members.
        </p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-8">
        {visibleEvents.map((event) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-1.33rem)]">
            <div class="h-48 bg-dojo-gray flex items-center justify-center text-white">
              {event.category === "Networking" && (
                <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              )}
              {event.category === "Workshops" && (
                <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              )}
              {event.category === "Training" && (
                <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
              {event.category === "Culinary" && (
                <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              )}
            </div>
            
            <div class="p-6">
              <span class="inline-block px-3 py-1 text-sm font-semibold text-dojo-red bg-red-50 rounded-full mb-3">
                {event.frequency}
              </span>
              
              <h3 class="font-inter font-bold text-xl mb-3">{event.title}</h3>
              <p class="text-dojo-gray">{event.description}</p>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Expandable "Events with Purpose" Section -->
      <div class="mt-12 text-center">
        <button
          id="purpose-toggle"
          class="inline-flex items-center px-6 py-3 text-sm font-medium text-dojo-red bg-red-50 rounded-lg hover:bg-red-100 transition-colors"
        >
          <span id="purpose-toggle-text">Our Events with Purpose Approach</span>
          <svg id="purpose-toggle-icon" class="w-5 h-5 ml-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
      </div>
      
      <div id="purpose-content" class="hidden mt-12 max-w-4xl mx-auto">
        <h3 class="font-inter font-bold text-3xl mb-8 text-center">Events with Purpose</h3>
        
        <div class="space-y-6 text-lg text-dojo-gray">
          <p>
            Every DOJO event serves a purpose beyond the immediate activity. Training sessions build mental resilience alongside physical strength. Networking events create genuine partnerships, not just LinkedIn connections. Workshops deliver actionable insights from practitioners who've actually done the work.
          </p>
          
          <p>
            We believe in quality over quantity. Our events are carefully curated to bring together the right people at the right time. Whether you're pushing through a workout, sharing insights in a workshop, or connecting at a mixer, you're surrounded by individuals committed to excellence.
          </p>
          
          <p>
            Members don't just attend events â€“ they help shape them. Your input determines our programming, ensuring that every gathering reflects the collective needs and ambitions of the DOJO community.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Location Section -->
  <section id="location" class="py-20 bg-dojo-light">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-inter font-bold text-4xl mb-4">Location</h2>
        <p class="text-xl text-dojo-gray">
          Our distinctive venue in South Tampa.
        </p>
      </div>
      
      <div class="bg-dojo-light rounded-lg p-8">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h3 class="font-inter font-semibold text-xl mb-4 text-dojo-red">Address</h3>
            <p class="text-dojo-gray text-lg mb-4">
              3508 S Manhattan Ave<br>
              Tampa, FL 33629
            </p>
            <a
              href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent('3508 S Manhattan Ave, Tampa, FL 33629')}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-dojo-red hover:text-red-700 transition-colors font-medium"
            >
              Get Directions
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
          <div class="rounded-lg overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3525.705086301565!2d-82.52016732742926!3d27.911022116484116!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88c2c32a914302f7%3A0x85f83f1d080df423!2s3508%20S%20Manhattan%20Ave%2C%20Tampa%2C%20FL%2033629!5e0!3m2!1sen!2sus!4v1763608435996!5m2!1sen!2sus"
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="w-full h-[300px]"
            ></iframe>
          </div>
        </div>
        <div class="mt-6 text-center">
          <a
            href={`${import.meta.env.BASE_URL}contact`}
            class="inline-flex items-center text-dojo-red hover:text-red-700 transition-colors text-sm font-medium"
          >
            View Full Location Page
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Inquire About Events Form Section -->
  <section id="venue-rental" class="py-20 bg-dojo-black text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-inter font-bold text-4xl mb-4">Inquire About Events</h2>
        <p class="text-xl text-dojo-light">
          Whether you're planning a one-time event, interested in becoming a preferred partner, or want to learn more about our event capabilities, we'd love to hear from you.
        </p>
      </div>
      
      <VenueRentalForm />
    </div>
  </section>
</Layout>

<script>
  // Expandable "Events with Purpose" toggle
  const purposeToggle = document.getElementById('purpose-toggle');
  const purposeContent = document.getElementById('purpose-content');
  const purposeToggleText = document.getElementById('purpose-toggle-text');
  const purposeToggleIcon = document.getElementById('purpose-toggle-icon');
  
  if (purposeToggle && purposeContent) {
    purposeToggle.addEventListener('click', () => {
      const isExpanded = !purposeContent.classList.contains('hidden');
      
      if (isExpanded) {
        purposeContent.classList.add('hidden');
        purposeToggleText.textContent = 'Our Events with Purpose Approach';
        purposeToggleIcon.style.transform = 'rotate(0deg)';
      } else {
        purposeContent.classList.remove('hidden');
        purposeToggleText.textContent = 'Show Less';
        purposeToggleIcon.style.transform = 'rotate(180deg)';
        // Smooth scroll to the expanded content
        purposeContent.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    });
  }
</script>
