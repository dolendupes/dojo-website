---
import Layout from '../layouts/Layout.astro';
import VenueRentalForm from '../components/VenueRentalForm.astro';

// Sample events to showcase capabilities
const eventTypes = [
  {
    category: "Networking",
    title: "Member Mixers",
    description: "Curated networking events where meaningful connections replace small talk. Build relationships that matter.",
    frequency: "Monthly",
    image: `${import.meta.env.BASE_URL}images/events/networking.jpg`
  },
  {
    category: "Workshops",
    title: "Executive Workshops",
    description: "Learn from successful entrepreneurs and industry leaders. Topics range from scaling businesses to optimizing performance.",
    frequency: "Periodic",
    image: `${import.meta.env.BASE_URL}images/events/workshop.jpg`
  },
  {
    category: "Private Events",
    title: "Member-Hosted Events",
    description: "Members can reserve our spaces for private events, from team offsites to product launches.",
    frequency: "On Request",
    image: `${import.meta.env.BASE_URL}images/events/private.jpg`
  },
  {
    category: "Community",
    title: "Family Events",
    description: "Building a multi-generational community with events that bring families together.",
    frequency: "Seasonal",
    image: `${import.meta.env.BASE_URL}images/events/family.jpg`
  },
  {
    category: "Training",
    title: "High-Performance Training Sessions",
    description: "Daily group training designed for peak performers. From strength and conditioning to martial arts and mobility work.",
    frequency: "Daily",
    image: `${import.meta.env.BASE_URL}images/events/training.jpg`
  },
  {
    category: "Culinary",
    title: "Cooking Lessons",
    description: "Hands-on culinary experiences led by expert chefs. Learn new techniques, explore diverse cuisines, and enjoy the fruits of your labor with fellow members.",
    frequency: "Periodic",
    image: `${import.meta.env.BASE_URL}images/events/cooking.jpg`
  }
];
---

<Layout title="Events - DOJO Tampa">
  <!-- Hero Section -->
  <section class="bg-dojo-black text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="font-inter font-bold text-4xl md:text-5xl mb-4 text-dojo-red">Events & Experiences</h1>
        <p class="text-xl text-dojo-light max-w-3xl mx-auto mb-8">
          DOJO hosts a curated calendar of events designed to challenge, connect, and elevate our members.
        </p>
        <a href={`${import.meta.env.BASE_URL}events#venue-rental`} class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors">
          Inquire About Venue Rental
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <!-- Event Types -->
  <section id="member-events" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-inter font-bold text-4xl mb-4">What Happens at DOJO</h2>
        <p class="text-xl text-dojo-gray max-w-3xl mx-auto">
          From daily training sessions to exclusive networking events, every gathering is designed with intention.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {eventTypes.map((event) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <div class="h-48 bg-dojo-gray flex items-center justify-center text-white">
              <span>{event.category}</span>
            </div>
            
            <div class="p-6">
              <span class="inline-block px-3 py-1 text-sm font-semibold text-dojo-red bg-red-50 rounded-full mb-3">
                {event.frequency}
              </span>
              
              <h3 class="font-inter font-bold text-xl mb-3">{event.title}</h3>
              <p class="text-dojo-gray">{event.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Venue Rental for Non-Members -->
  <section id="venue-rental-options" class="py-20 bg-dojo-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-inter font-bold text-4xl mb-4">Venue Rental</h2>
        <p class="text-xl text-dojo-gray max-w-3xl mx-auto">
          DOJO's versatile spaces are available for private events. Perfect for celebrations, corporate gatherings, and special occasions.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="h-48 bg-dojo-gray flex items-center justify-center text-white">
            <span>Bridal & Groom</span>
          </div>
          <div class="p-6">
            <h3 class="font-inter font-bold text-xl mb-3">Bridal & Groom Parties</h3>
            <p class="text-dojo-gray">Celebrate your special day with our elegant spaces perfect for bridal showers, bachelor parties, and pre-wedding gatherings.</p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="h-48 bg-dojo-gray flex items-center justify-center text-white">
            <span>Corporate</span>
          </div>
          <div class="p-6">
            <h3 class="font-inter font-bold text-xl mb-3">Corporate Events</h3>
            <p class="text-dojo-gray">Host team meetings, offsites, product launches, and corporate celebrations in our professional event spaces.</p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="h-48 bg-dojo-gray flex items-center justify-center text-white">
            <span>Cocktail Parties</span>
          </div>
          <div class="p-6">
            <h3 class="font-inter font-bold text-xl mb-3">Cocktail Parties</h3>
            <p class="text-dojo-gray">Sophisticated spaces for networking events, celebrations, and social gatherings with full bar service capabilities.</p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="h-48 bg-dojo-gray flex items-center justify-center text-white">
            <span>Bridal Suite</span>
          </div>
          <div class="p-6">
            <h3 class="font-inter font-bold text-xl mb-3">Bridal Get-Ready Room</h3>
            <p class="text-dojo-gray">A dedicated space for bridal parties to prepare, complete with mirrors, seating, and all the amenities you need.</p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="h-48 bg-dojo-gray flex items-center justify-center text-white">
            <span>Tastings</span>
          </div>
          <div class="p-6">
            <h3 class="font-inter font-bold text-xl mb-3">Private Tastings</h3>
            <p class="text-dojo-gray">Host exclusive wine, whiskey, or culinary tastings in an intimate setting designed for connoisseurs.</p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="h-48 bg-dojo-gray flex items-center justify-center text-white">
            <span>Cooking Lessons</span>
          </div>
          <div class="p-6">
            <h3 class="font-inter font-bold text-xl mb-3">Cooking Lessons</h3>
            <p class="text-dojo-gray">Hands-on culinary experiences led by expert chefs. Perfect for team building, private groups, or special occasions.</p>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-12">
        <a href={`${import.meta.env.BASE_URL}events#venue-rental`} class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-dojo-red rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors">
          Inquire About Venue Rental
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Event Philosophy -->
  <section id="philosophy" class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="font-inter font-bold text-4xl mb-8 text-center">Events with Purpose</h2>
      
      <div class="space-y-6 text-lg text-dojo-gray">
        <p>
          Every DOJO event serves a purpose beyond the immediate activity. Training sessions build mental resilience alongside physical strength. Networking events create genuine partnerships, not just LinkedIn connections. Workshops deliver actionable insights from practitioners who've actually done the work.
        </p>
        
        <p>
          We believe in quality over quantity. Our events are carefully curated to bring together the right people at the right time. Whether you're pushing through a workout, sharing insights in a workshop, or connecting at a mixer, you're surrounded by individuals committed to excellence.
        </p>
        
        <p>
          Members don't just attend events â€“ they help shape them. Your input determines our programming, ensuring that every gathering reflects the collective needs and ambitions of the DOJO community.
        </p>
      </div>
    </div>
  </section>

  <!-- Host an Event -->
  <section id="host-event" class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-inter font-bold text-3xl mb-4">Host Your Event at DOJO</h2>
      <p class="text-xl text-dojo-gray mb-8">
        DOJO members have access to our event spaces for team gatherings, workshops, product launches, and private celebrations. Our versatile spaces and professional amenities provide the perfect backdrop for memorable events.
      </p>
      <a href={`${import.meta.env.BASE_URL}#inquiry`} class="bg-dojo-black text-white px-8 py-3 rounded font-semibold hover:bg-gray-800 transition-colors inline-block">
        Inquire About Events
      </a>
    </div>
  </section>

  <!-- Venue Rental Form Section -->
  <section id="venue-rental" class="py-20 bg-dojo-black text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-inter font-bold text-4xl mb-4">Venue Rental Inquiry</h2>
        <p class="text-xl text-dojo-light">
          Interested in hosting your event at DOJO? Fill out the form below and we'll get back to you with availability and pricing.
        </p>
      </div>
      
      <VenueRentalForm />
    </div>
  </section>
</Layout>
