---
import Layout from '../layouts/Layout.astro';
import AdvancedGallery from '../components/AdvancedGallery.astro';

// Get BASE_URL - ensure it always ends with / for proper path joining
const baseUrl = import.meta.env.BASE_URL || '/';
const base = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;

// Placeholder image path - replace individual images as they become available
const placeholderImage = `${base}images/gallery/placeholder.svg`;

// Gallery images - using placeholder until actual images are added
const galleryImages = [
  // Training Spaces
  { src: placeholderImage, alt: "Main training floor", category: "Training", title: "Main Training Floor", description: "3,000 sq ft of open training space" },
  { src: placeholderImage, alt: "Strength area", category: "Training", title: "Strength Area", description: "Olympic platforms and power racks" },
  { src: placeholderImage, alt: "Functional fitness zone", category: "Training", title: "Functional Zone", description: "Turf area for dynamic movements" },
  { src: placeholderImage, alt: "Recovery area", category: "Training", title: "Recovery Area", description: "Dedicated space for mobility and recovery" },
  
  // DOJO Labs
  { src: placeholderImage, alt: "Open workspace", category: "Labs", title: "Open Workspace", description: "Collaborative hot desk area" },
  { src: placeholderImage, alt: "Private offices", category: "Labs", title: "Private Offices", description: "Quiet spaces for focused work" },
  { src: placeholderImage, alt: "Meeting rooms", category: "Labs", title: "Meeting Rooms", description: "Professional meeting spaces" },
  { src: placeholderImage, alt: "Event space", category: "Labs", title: "Event Space", description: "Versatile space for workshops and presentations" },
  
  // Community
  { src: placeholderImage, alt: "Member event", category: "Community", title: "Member Events", description: "Regular networking and social gatherings" },
  { src: placeholderImage, alt: "Group training", category: "Community", title: "Group Training", description: "Building strength together" },
  { src: placeholderImage, alt: "Workshop session", category: "Community", title: "Workshops", description: "Learning from industry leaders" },
  { src: placeholderImage, alt: "Networking event", category: "Community", title: "Networking", description: "Meaningful connections, not small talk" },
  
  // Facilities
  { src: placeholderImage, alt: "Entrance", category: "Facility", title: "DOJO Entrance", description: "Where transformation begins" },
  { src: placeholderImage, alt: "Lounge area", category: "Facility", title: "Member Lounge", description: "Relax and connect between sessions" },
  { src: placeholderImage, alt: "Locker rooms", category: "Facility", title: "Locker Rooms", description: "Premium amenities and privacy" },
  { src: placeholderImage, alt: "Exterior", category: "Facility", title: "Building Exterior", description: "3508 S Manhattan Ave, Tampa" },
];
---

<Layout title="Gallery - DOJO Tampa">
  <!-- Hero Section -->
  <section class="bg-dojo-black text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="font-inter font-bold text-4xl md:text-5xl mb-4">Gallery</h1>
      <p class="text-xl text-dojo-light max-w-3xl">
        Experience DOJO Tampa through images of our spaces, events, and community.
      </p>
    </div>
  </section>
  
  <!-- Advanced Gallery -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <AdvancedGallery 
        images={galleryImages}
        showFilter={true}
      />
    </div>
  </section>

  <!-- Virtual Tour CTA -->
  <section class="py-16 bg-dojo-light">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-inter font-bold text-3xl mb-4">Experience DOJO in Person</h2>
      <p class="text-xl text-dojo-gray mb-8">
        Pictures only tell part of the story. The energy, community, and purpose of DOJO must be experienced firsthand.
      </p>
      <a href={`${import.meta.env.BASE_URL}#inquiry`} class="bg-dojo-red text-white px-8 py-3 rounded font-semibold hover:bg-red-700 transition-colors inline-block">
        Inquire about a visit
      </a>
    </div>
  </section>
</Layout>

